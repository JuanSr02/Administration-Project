<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="defaultPersistenceUnit">
        <class>PersonaDAO</class>
        <class>PropiedadDAO</class>
        <class>MartilleroDAO</class>
        <class>CasaDAO</class>
        <class>DepartamentoDAO</class>
        <class>LocalComercialDAO</class>
        <class>Terreno_LoteDAO</class>
        <class>TransaccionDAO</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/martillero" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="admin" />
        </properties>
    </persistence-unit>
</persistence>
